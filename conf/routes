# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                   controllers.Application.index
GET        /:rootId                            controllers.Application.hierarchy(rootId:Long, depth:Option[Int] ?= None)
GET        /json/:rootId                       controllers.Application.hierarchyJSON(rootId:Long, depth:Option[Int] ?= None)
POST       /json                               controllers.Application.createNode()
PUT        /json/:nodeId/move/:targetId        controllers.Application.moveNode(nodeId:Long, targetId:Long)


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                       controllers.Assets.at(path="/public", file)
